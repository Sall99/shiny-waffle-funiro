// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Products {
  id                    String   @id @default(auto()) @map("_id") @db.ObjectId
  name                  String
  title                 String
  category              String
  description           String
  price                 Float
  promoPrice            Float
  defaultImage          String
  imageUrl              String[]
  additionalInformation String[]
  reviews               Review[]
}

type Review {
  author  String
  rating  Int
  comment String
}
